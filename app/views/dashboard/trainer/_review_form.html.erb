<% unless card.blank? %>
  <h2><%= t('.current_card') %></h2>

  <%= form_tag review_card_path(card_id: card.id), method: :put, remote: true do %>

    <% if card.image? %>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-3 col-md-2 card_image">
            <p class="thumbnail">
              <%= image_tag card.image_url %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= label_tag '', t('.original_text') %>
      <%= text_field_tag '', card.original_text, class: 'form-control',
                        disabled: true %>
    </div>

    <div class="form-group">
      <%= label_tag '', t('.translated_text') %>
      <%= text_field_tag :user_translation, nil, class: 'form-control',
                        required: true, autofocus: true %>
    </div>

    <%= submit_tag t('.check_card'), class: 'btn btn-default' %>
  <% end %>
<% else %>
  <p class="lead"><%= t('.no_review_card') %></p>
<% end %>