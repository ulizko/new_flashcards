<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><%= t('.email') %></th>
      <th><%= t('.number_of_cards') %></th>
      <th><%= t('.number_of_pending_cards') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr class="table table-hover table-condensed">
      <td><%= user.email %></td>
      <td><%= user.cards.count %></td>
      <td><%= user.cards.pending.count %></td>
    </tr>
  <% end %>
  </tbody>
</table>